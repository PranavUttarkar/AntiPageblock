{
  "manifest_version": 3,
  "name": "Dev Paywall Tester",
  "version": "1.0",
  "description": "For devs: remove paywall-like parents, strip overflow:hidden, and unset position:fixed for testing your site.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Dev Paywall Tester"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
  ,
  "background": {
    "service_worker": "background.js"
  }
}
